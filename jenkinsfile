pipeline {
    agent any
    parameters {
        string(name: 'VM', defaultValue: 'VM-ONE', description: 'My VM name created over this job')
        }

    stages {
        stage('Build') {
            input {
                message "Should we continue?"
                ok "Yes, we should."
                 parameters {
                   string(name: 'VM', defaultValue: 'VM-ONE', description: 'My VM name created over this job')
                  }
                }
            steps {
                echo "Running ${env.BUILD_ID} on ${env.JENKINS_URL}"
                echo "This is  ${params.VM}"
            }
            steps {
                sh "terraform init"
            }
        }
        stage('plan') {
            steps {
                echo 'planning..'
                sh "terraform plan"
            }
        }
        stage('apply') {
            steps {
                echo 'Deploying....'
                sh "terraform apply -auto-approve"
            }
        }
    }
}

pipeline {
    agent any
     stages {
            stage('Example') {
                input {
                message "Should we continue?"
                ok "Yes, we should."
                submitter "alice,bob"
                    parameters {
                        string(name: 'PERSON', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')
                    }
                }
                steps {
                    echo "Hello, ${PERSON}, nice to meet you."
                }
            }
            stage('terraform init'){
                steps{
                    sh "terraform init"
                }
            }
            stage('terraform plan'){
                steps{
                    sh "terraform plan"
                }
            }
            stage('Approval') {
                steps {
                    script {
                        def userInput = input(instance_name: 'confirm', message: 'Apply Terraform?', parameters: [ [$class: 'BooleanParameterDefinition', defaultValue: false, description: 'Apply terraform', name: 'confirm'] ])
                    }
                }
           }        
           stage('terraform apply'){
                steps{
                    sh returnStatus: true, script: 'terraform apply -auto-approve'
                 }
            }
            stage('apply') {
                steps {
                    echo 'deployed....'
                }
            }
    }
}
